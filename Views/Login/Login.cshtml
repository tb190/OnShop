@model OnShop.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/OnShop.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
                <div><img src="~/Pictures/logo.png" style="margin-left:-5px; border-radius:50px; width:70px; height:70px;"></div>

                <a class="navbar-brand  justify-content-flex-start" asp-area="" asp-controller="User" asp-action="UserHome" style="font-size: 2rem; color: #29353c; font-family: 'Sacramento', cursive;">OnShop</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
        </nav>



        <div class="login-part d-flex">

            <div class="bg-part col-md-4">
                <img src="~/Pictures/bg.png" style="margin-top: 100px; padding-left: 130px;  width: auto; height: 300px; border-radius: 50px; "/>
            </div>


            <div class="login-form-part  col-md-6" id="login-part">
                <div class="header-text" style="margin-left: -250px;">
                    <h2 class="hello">Hello,</h2>
                    <h2 class="text-muted" style="font-size: 1rem;">Log in to OnShop or create an account.</h2>
                </div>

                <div class="login-container" id="login-container">
                    <div class="tabs">
                        <button class="tab-button active" data-tab="login">Login</button>
                        <button class="tab-button" data-tab="register">Sign Up</button>
                    </div>

                    <div class="tab-content">
                        <!-- LOGIN PART -->
                        <div id="login" class="tab-pane active">
                            <form asp-controller="Login" asp-action="LoginLogin" method="post" style="display: flex; flex-direction: column;">
                                <label for="email">Email</label>
                                <input type="email" id="email" name="email" required>

                                <label>Password</label>
                                <div class="input-group" id="show_hide_password">
                                    <input class="form-control" type="password" name="password" id="passwordInput1">
                                    <div class="input-group-addon">
                                        <a href="" style="color: #333"><i class="fa fa-eye-slash" id="eye" aria-hidden="true"></i></a>
                                    </div>
                                </div>

                                <a href="#" class="forgot-password">I forgot my password</a>

                                @if (TempData["ErrorMessage"] != null)
{
                                <div class="alert alert-danger">
                                    @TempData["ErrorMessage"]
                                </div>
}

                                <button type="submit" class="btn-login">LOGIN</button>
                            </form>
                        </div>

                        <!-- REGISTER PART -->
                        <div id="register" class="tab-pane">
                            <div class="register-container" id="register-container" style="display: flex; flex-direction: column;">

                                <div class="registration-type">
                                    <label>Registration Type</label>
                                    <div class="registration-type-options " style="display: flex; flex-direction: row; ">
                                        <label><input type="radio" name="registrationType" value="individual"> Individual</label>
                                        <label><input type="radio" name="registrationType" value="company" style="margin-left:30px;"> Company</label>
                                    </div>
                                </div>

                                <!-- Individual fields -->

                                <div class="row">
                                    <div id="registercontainerIndividual" class="col registration-fields">
                                        <form asp-area="" asp-controller="Login" asp-action="RegisterIndividual" method="post" enctype="multipart/form-data">

                                            <div class="form-container" style="display: flex; gap: 20px; ">
                                                <div id="registerfields" style="flex: 1;">
                                                    <label for="name-register">Name</label>
                                                    <input type="text" id="nameIndividual" name="User.Name" required>

                                                    <label for="surname-register">Surname</label>
                                                    <input type="text" id="surnameIndividual" name="User.SurName" required>

                                                    <label for="email-register">Email</label>
                                                    <input type="email" id="email-registerIndividual" name="User.Email" required>

                                                    <label>Password</label>
                                                    <div class="input-group" id="show_hide_password">
                                                        <input class="form-control" type="password" name="User.Password" id="passwordInput2">
                                                        <div class="input-group-addon">
                                                            <a href="" style="color: #333"><i class="fa fa-eye-slash" id="eye" aria-hidden="true"></i></a>
                                                        </div>
                                                    </div>

                                                </div>

                                                <div id="individualFields" style="flex: 1; ">
                                                    <label for="address">Address</label>
                                                    <input type="text" id="address" name="User.Address">

                                                    <label for="BirthDate">Birthdate:</label>
                                                    <input type="date" placeholder="Birthdate" name="BirthDate" required>

                                                    <label for="phone">Phone Number</label>
                                                    <input type="text" id="phone" name="User.PhoneNumber">
                                                </div>
                                            </div>

                                            <div class="button-container" style=" width: 100%; display: flex; justify-content: center; margin-top: 20px; ">
                                                <button type="submit" class="btn-register" style="width:200px;">SIGN UP</button>
                                            </div>

                                        </form>
                                    </div>


                                    <!-- Company fields -->

                                    <div id="registercontainerCompany" class="col registration-fields">
                                        <form asp-area="" asp-controller="Login" asp-action="RegisterCompany" method="post" enctype="multipart/form-data">
                                            <div class="form-container" style="display: flex; gap: 20px; ">
                                                <div id="registerfields" style="flex: 1;">
                                                    <label for="name-register">Name</label>
                                                    <input type="text" id="nameCompany" name="User.Name" required>

                                                    <label for="surname-register">Surname</label>
                                                    <input type="text" id="surnameCompany" name="User.SurName" required>

                                                    <label for="email-register">Email</label>
                                                    <input type="email" id="email-registerCompany" name="User.Email" required>

                                                    <label>Password</label>
                                                    <div class="input-group" id="show_hide_password">
                                                        <input class="form-control" type="password" name="User.Password" id="passwordInput3">
                                                        <div class="input-group-addon">
                                                            <a href="" style="color: #333"><i class="fa fa-eye-slash" id="eye" aria-hidden="true"></i></a>
                                                        </div>
                                                    </div>

                                                    <label for="companyPhone">Phone Number</label>
                                                    <input type="text" id="companyPhone" name="User.PhoneNumber">

                                                    <label for="BirthDate">Birthdate:</label>
                                                    <input type="date" placeholder="Birthdate" name="BirthDate" required>
                                                </div>

                                                <div id="companyFields" style="flex: 1;">
                                                    <label for="companyName">Company Name</label>
                                                    <input type="text" id="companyName" name="Company.CompanyName" required>


                                                    <label for="companyDescription">Description</label>
                                                    <textarea id="companyDescription" name="Company.CompanyDescription"></textarea>

                                                    <label for="companyAddress">Address</label>
                                                    <input type="text" id="companyAddress" name="User.Address">


                                                    <label for="taxIDNumber">Tax ID Number</label>
                                                    <input type="text" id="taxIDNumber" name="Company.TaxIDNumber">

                                                    <label for="IBAN">IBAN</label>
                                                    <input type="text" id="IBAN" name="Company.IBAN" placeholder="TR00000000000000000000000000" maxlength="26">

                                                    <label for="companyLogo">Company Logo</label>
                                                    <input type="file" id="companyLogo" name="LogoUrl" accept="image/*" onchange="previewImage('companyLogo', 'logoPreview')">
                                                    <img id="logoPreview" class="preview-image" src="" alt="Logo Preview" style="display: none;">

                                                    <label for="companyBanner">Company Banner</label>
                                                    <input type="file" id="companyBanner" name="BannerUrl" accept="image/*" onchange="previewImage('companyBanner', 'bannerPreview')">
                                                    <img id="bannerPreview" class="preview-image" src="" alt="Banner Preview" style="display: none;">
                                                </div>
                                            </div>
                                            <div class="button-container" style=" width: 100%; display: flex; justify-content: center; margin-top: 20px; ">
                                                <button type="submit" class="btn-register" style="width:200px;">SIGN UP</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>

        /* ----------------- Login VEYA Singup ----------------- */
        document.addEventListener('DOMContentLoaded', function () {
            const tabButtons = document.querySelectorAll('.tab-button');
            const tabPanes = document.querySelectorAll('.tab-pane');

            tabButtons.forEach(button => {
                button.addEventListener('click', function () {
                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    tabPanes.forEach(pane => pane.classList.remove('active'));

                    button.classList.add('active');
                    const dataTab = button.getAttribute('data-tab')
                    document.getElementById(dataTab).classList.add('active');

                    const loginpart = document.getElementById('login-part');
                    const logincontainer = document.getElementById('login-container');
                    const radios = document.querySelectorAll('input[name="registrationType"]');
                    const registercontainerIndividual = document.getElementById('registercontainerIndividual');
                    const registercontainerCompany = document.getElementById('registercontainerCompany');
                    
                    if (dataTab === 'login') {
                        loginpart.style.height = `auto`;
                        logincontainer.style.width = '400px';
                    } else {
                        loginpart.style.height = `auto`; 
                        logincontainer.style.width = '400px';
                    }

                    registercontainerIndividual.style.display = 'none';
                    registercontainerCompany.style.display = 'none';
                    radios.forEach(radio => radio.checked = false);
                });
            });
        });

        /* ----------------- Password Open or Closed ----------------- */
        $(document).ready(function() {
            $("#show_hide_password a").on('click', function(event) {
                event.preventDefault();
                if($('#show_hide_password input').attr("type") == "text"){
                    $('#show_hide_password input').attr('type', 'password');
                    $('#show_hide_password i').addClass( "fa-eye-slash" );
                    $('#show_hide_password i').removeClass("fa-eye");

                }else if($('#show_hide_password input').attr("type") == "password"){
                    $('#show_hide_password input').attr('type', 'text');
                    $('#show_hide_password i').removeClass( "fa-eye-slash" );
                    $('#show_hide_password i').addClass("fa-eye");
                }
            });
        });

        /* ----------------- Registration Type Switch ----------------- */
        // Handle Registration Type Change
        document.addEventListener('DOMContentLoaded', function () {
            const registrationTypeRadios = document.querySelectorAll('input[name="registrationType"]');
            const registercontainerIndividual = document.getElementById('registercontainerIndividual');
            const registercontainerCompany = document.getElementById('registercontainerCompany');

            const companyFields = document.getElementById('companyFields');
            const loginpart = document.getElementById('login-part');
            const logincontainer = document.getElementById('login-container');
            const register = document.getElementById('register');
            const registerfields = document.getElementById('registerfields');

            registrationTypeRadios.forEach(radio => {
                radio.addEventListener('change', function () {
                    if (this.value === 'individual') {
                        registercontainerIndividual.style.display = 'block';
                        registercontainerCompany.style.display = 'none';
                        loginpart.style.height = `auto`;
                        logincontainer.style.width = '800px';
                        individualFields.style.display = 'flex';
                        individualFields.style.flexDirection = 'column';
                        registerfields.style.display = 'flex';
                        registerfields.style.flexDirection = 'column';
                    } else if (this.value === 'company') {
                        registercontainerIndividual.style.display = 'none';
                        registercontainerCompany.style.display = 'block';
                        loginpart.style.height = `auto`; 
                        logincontainer.style.width = '800px';
                        companyFields.style.display = 'flex';
                        companyFields.style.flexDirection = 'column';
                        registerfields.style.display = 'flex';
                        registerfields.style.flexDirection = 'column';
                    }
                });
            });

            // Initialize fields visibility based on the default selected option
            const checkedRadio = document.querySelector('input[name="registrationType"]:checked');
            if (checkedRadio) {
                if (checkedRadio.value === 'individual') {
                    individualFields.style.display = 'block';
                    companyFields.style.display = 'none';
                } else if (checkedRadio.value === 'company') {
                    individualFields.style.display = 'none';
                    companyFields.style.display = 'block';
                }
            }
        });

        // Function to preview uploaded images
        function previewImage(inputId, previewId) {
            const file = document.getElementById(inputId).files[0];
            const preview = document.getElementById(previewId);

            if (file) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                };

                reader.readAsDataURL(file);
            } else {
                preview.src = '';
                preview.style.display = 'none';
            }
        }

    </script>



    <style>

        .input-group {
            position: relative;
            height: 8vh;
            border-radius: 7px;
        }

            .input-group .form-control {
                padding-right: 40px; /* Adjust padding to accommodate icon */
            }
        /* Default height for text input */
        .form-control[type="text"] {
            height: 45px;
        }

            /* Increased height for text input */
            .form-control[type="text"].expanded {
                height: 60px;
            }

            .input-group .input-group-addon .fa-eye-slash{
                position: absolute;
                right: 7px;
                top: 40%;
                cursor: pointer;
                transform: translate(-50%, -50%);
            }
        .input-group .input-group-addon .fa-eye {
            position: absolute;
            right: 9px;
            top: 40%;
            cursor: pointer;
            transform: translate(-50%, -50%);
        }

        .navbar {
            border-bottom: 1px solid #29353c;
            margin-bottom: 20px;
        }

        .login-part {
            background-image: linear-gradient(to right bottom, #e9e9e9, #ededed, #f1f1f1, #f5f5f5, #f9f9f9, #f9f9f9, #f9f9f9, #f9f9f9, #f5f5f5, #f1f1f1, #ededed, #e9e9e9);
            /*display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;*/
            height: auto;
            padding-bottom: 50px;
            border-radius: 10px;
            position: relative;
        }

        .header-text {
            text-align: center;
            margin-bottom: 20px;
            margin-top: 25px;
        }

            .header-text h2 {
                margin: 0;
                font-size: 1.2rem;
                font-weight: normal;
            }


        .login-container {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            padding: 20px;
            width: 400px;
        }



        .registerfields {
            display: flex;
            flex-direction: column;
            max-width: 500px; /* Optional: Set a max width */
            margin: 0 auto; /* Optional: Center the form */
        }


 

        .tabs {
            display: flex;
            justify-content: space-around;
            border-bottom: 1px solid #ccc;
        }

        .tab-button {
            background: none;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            font-size: 16px;
            color: #333;
            transition: color 0.3s;
        }

            .tab-button.active {
                color: #008DDA;
                border-bottom: 2px solid #008DDA;
            }

        .tab-content {
            margin-top: 20px;
        }

        .tab-pane {
            display: none;
        }

            .tab-pane.active {
                display: block;
            }


        label {
            margin-bottom: 5px;
            font-weight: bold;
        }

        input[type="email"],
        input[type="password"] {
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .forgot-password {
            color: #008DDA;
            text-align: right;
            margin-bottom: 20px;
        }

        .btn-login,
        .btn-register {
            background: linear-gradient(to right, #29353c, #4b5861);
            color: #fff;
            border: none;
            padding: 10px 0;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn-login:hover,
            .btn-register:hover {
                background-color: #4b5861;
            }

        .password-hint {
            font-size: 12px;
            color: #888;
            margin-bottom: 15px;
        }


        /* Styles for gender options */
        .registration-type-options {
            margin-top: 10px;
            display: flex;
            flex-direction: column;
            margin-bottom: 10px;
        }

            .registration-type-options label {
                margin-bottom: 5px;
            }

        /* Ensure consistent styling */
        input[type="radio"] {
            margin-right: 5px;
            margin-top: px;
        }


        .registration-fields {
            display: none;
            margin-top: 10px;
        }

            .registration-fields input,
            .registration-fields textarea {
                width: 100%;
                margin-bottom: 15px;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
                box-sizing: border-box; /* Ensure padding and border are included in width */
            }


        /* Add styles for preview images */
        .preview-image {
            max-width: 150px; /* Set maximum width */
            max-height: 150px; /* Set maximum height */
            object-fit: cover; /* Maintain aspect ratio */
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-top: 10px;
            display: block;
        }
    </style>

</body>
</html>
