                font-size: 15px;
                font-weight: 400;
                line-height: 15px;
                padding: 0 2px 0 0;
                text-decoration: none;
                color: #333;
            }

        /* Price */

        .description .price-container {
            display: flex;
            align-items: center;
            height: 20px;
            color: #333;
        }

            .description .price-container .prices {
                display: flex;
                align-items: center;
                height: 20px;
                line-height: 20px;
                color: #333;
            }

        .description div.price-box {
            color: #333;
            font-weight: 600;
        }
    </style>
</body>
</html>
