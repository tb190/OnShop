                            for (int i = 0; i < Model.Product.Photos.Count; i++)
                            {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img class="carousel-img d-block w-100" src="@Model.Product.Photos.ElementAt(i)" alt="Slide @(i + 1)" style=" border-radius: 5px; border: 1.5px solid #f2f2eb;">
                            </div>
                            }
