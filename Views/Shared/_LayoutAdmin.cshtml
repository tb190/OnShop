<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Sacramento&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap">
</head>
<body style="overflow: hidden;">
    <div class="container-fluid">
        <div class="row flex-nowrap">

            <!-- Sidebar -->
            <nav class="sidebar col-lg-2 d-none d-md-block h-100">

                <div class="sidebar-brand" style="border-bottom: 1px solid #ffffff; padding-top: 0.1rem;">
                    <h1 style="font-size: 1.7rem;  padding-left: 1.2rem; color: #fff; font-family: 'Montserrat', cursive; "><span class="" style="font-size: 1.5rem; padding-right: 1rem;"></span>OnShop</h1>
                </div>

                <div class="sidebar-main mt-2">
                    <ul class="nav flex-column">
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Vendor" && ViewContext.RouteData.Values["Action"].ToString() == "VendorHome" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="AdminHome">
                                <span class="las la-chalkboard"></span>
                                <span class="nav-text">DashBoard</span>
                            </a>
                        </li>
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Vendor" && ViewContext.RouteData.Values["Action"].ToString() == "VendorCustomers" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="AdminCompanies">
                                <span class="las la-briefcase"></span>
                                <span class="nav-text">Companies</span>
                            </a>
                        </li>              
                    </ul>
                </div>

                <!-- Vendor Info -->
                <div class="sidebar-vendor-info d-flex align-items-center mt-auto">
                    <!-- Vendor Info -->
                    <a class="vendor-info d-flex align-items-center" asp-area="" asp-controller="Vendor" asp-action="VendorHome">
                        <img src="~/Pictures/profile.jpg" alt="Profile Picture" class="vendor-profile-pic">
                        <div class="vendor-details">
                            <p class="vendor-name">John Doe</p>
                            <p class="vendor-company">OnShop Inc.</p>
                            <p class="vendor-position">Manager</p>
                        </div>
                    </a>

                    <!-- Logout Button -->
                    <div class="logout-button">
                        <a asp-area="" asp-controller="Vendor" asp-action="VendorHome" class="btn">
                            <span class="las la-sign-out-alt" style="color:#ffffff; fill:none; font-size:1.5rem "></span>
                        </a>
                    </div>
                </div>
            </nav>

            <!-- Main content -->
            <main role="main" class="col-lg-10" style="margin-left:30px; margin-top:10px">
                @RenderBody()
            </main>

        </div>
    </div>

    <style>
        .sidebar {
            max-width: 200px;
            background: linear-gradient(to right, #29353c, #4b5861);
            /*background-color: #29353c;*/
            padding-top: 20px;
        }

        .sidebar-main {
            padding-top: 1rem;
            margin-right: -12px;
            overflow-y: auto;
            height: calc(92vh - 90px);
        }

        @@media (max-height: 992px) {
            .sidebar-main {
                height: calc(92vh - 90px);
            }
        }

        .nav-item {
            margin-bottom: 1rem;
        }

        .nav-link {
            display: block;
            color: #fff;
            font-size: 0.7rem;
            padding-left: 1.4rem;
        }

            .nav-link span:first-child {
                font-size: 1rem;
                padding-right: 1rem;
            }

            .nav-link .nav-text {
                font-family: 'Montserrat';
            }

        .nav-item.active {
            background: #ffffff;
            border-radius: 30px 0px 0px 30px;
        }

            .nav-item.active .nav-text {
                color: #000;
            }

            .nav-item.active .las {
                color: #000;
            }

        .nav-link:hover {
            color: #cdbcab;
        }

        /* Vendor Info styles */
        .sidebar-vendor-info {
            bottom: 0;
            padding-top: 0.7rem;
            font-size: 0.7rem;
            border-top: 1px solid #ffffff;
            padding-bottom: 20px;
        }

        .vendor-info {
            display: flex;
            align-items: center;
            color: #fff;
            text-decoration: none;
        }

        .vendor-profile-pic {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 1rem;
        }

        .vendor-details {
            display: flex;
            flex-direction: column;
        }

        .vendor-name {
            font-weight: bold;
            margin-bottom: 0.2rem;
            font-family: 'Montserrat';
        }

        .vendor-company,
        .vendor-position {
            margin-bottom: 0.2rem;
            font-family: 'Montserrat';
            font-size: 0.5rem;
        }

        .la-sign-out-alt:hover {
            color: #cdbcab;
        }

        .vendor-info:hover {
            color: #cdbcab;
        }

        /* Scrollbar customization */
        .sidebar-main::-webkit-scrollbar {
            width: 2px;
        }

        .sidebar-main::-webkit-scrollbar-track {
            background: #29353c;
        }

        .sidebar-main::-webkit-scrollbar-thumb {
            background-color: #ffffff;
            border-radius: 3px;
        }

            .sidebar-main::-webkit-scrollbar-thumb:hover {
                background: #555;
            }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
