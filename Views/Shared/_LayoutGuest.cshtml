@model OnShop.Models.GuestHomeViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Sacramento&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap">
</head>
<body style="overflow: hidden;">
    <div>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand  justify-content-flex-start" asp-area="" asp-controller="Guest" asp-action="GuestHome" style="font-size: 1.55rem; color: #29353c; font-family: 'Montserrat', cursive;">OnShop</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Vendor" asp-action="VendorHome">
                                <span class="fa-regular fa-user"></span>
                                <span class="nav-text">Login</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Category bar !!!!! kategoriye g�re �r�nleri g�stercen -->
        <div class="container">
            <div class="category-bar">
                <ul class="nav justify-content-center">
                    <a class="nav-link category-navlink" href="#" id="category-All" data-categoryid="All">
                        All
                    </a>
                    @if (Model.Categories != null && Model.Categories.Count > 0)
                        {
                    @foreach (var category in Model.Categories)
                        {
                    <li class="nav-item">
                        <a class="nav-link category-navlink" href="#" id="category-@category.CategoryId" data-categoryid="@category.CategoryId">
                            @category.CategoryName
                        </a>
                        <div class="types-list" id="types-list-@category.CategoryId">
                            @if (category.Types != null && category.Types.Count > 0)
                            {
                            <div class="row">
                                @if(category.Types.Count<5){
                                <div class="col">
                                    <ul class="types">
                                        @for (int j = 0; j < Math.Min(category.Types.Count, 5); j++)
                                            {
                                        <li>
                                            <a class="nav-link" href="#" id="category-@category.Types[j]" data-categoryid="@category.Types[j]">
                                                @category.Types[j]

                                            </a>
                                        </li>

                                            }
                                    </ul>
                                </div>
                                    }
                                    else{
                                        for (int i = 0; i < category.Types.Count/5; i++){
                                <div class="col">
                                    <ul class="types">
                                        @for (int j = 0; j < Math.Min(category.Types.Count, 5); j++)
                                                    {
                                        <li>
                                            <a class="nav-link" href="#" id="category-@category.Types[j]" data-categoryid="@category.Types[j]">
                                                @category.Types[j]

                                            </a>
                                        </li>
                                                    }
                                    </ul>
                                </div>
                                        }
                                    }
                            </div>
                            }
                            else
                            {
                            <span class="text-danger">No types found for this category.</span>
                            }
                        </div>
                    </li>
                }
            }
            else
            {
                    <li class="nav-item">
                        <span class="nav-link text-danger">No categories found.</span>
                    </li>
            }
                </ul>
            </div>
        </div>


        <!-- Main content -->
        <main role="main"  style="margin-left: 100px; margin-right: 100px; margin-top: 20px">
            @RenderBody()
        </main>
    </div>


    <script>
        $(document).ready(function () {
            // T�m t�r listelerini gizle
            $('.types-list').hide();

            // Kategoriye hover edildi�inde t�r listesini g�ster
            $('.nav-link').mouseenter(function () {
                var categoryId = $(this).data('categoryid');
                $('#types-list-' + categoryId).slideDown();
            });

            // T�r listesine hover edildi�inde listeyi a��k tut
            $('.types-list').mouseenter(function () {
                $(this).stop(true, true).slideDown();
            });

            // T�r listesinden hover ��k�ld���nda listeyi gizle
            $('.types-list').mouseleave(function () {
                $(this).stop(true, true).slideUp();
            });
        });
    </script>


    <style>
        .navbar {
            background-color: #fff;
        }

        .nav-link {
            display: block;
            color: #29353c;
            font-size: 0.7rem;
            padding-left: 1.4rem;
        }
        .navbar-nav .nav-item .nav-link {
            display: flex;
            align-items: center;
            padding-left: 20px; 
        }

            .nav-link span:first-child {
                font-size: 0.9rem;
                color: #29353c;
                padding-right: 2px;
            }

            .nav-link .nav-text {
                font-family: 'Montserrat';
                font-size: 14px;
                color: #29353c;
            }

        .category-bar {
            background-color: #fff;
            border-bottom: 1px solid #29353c;
        }

            .category-bar .nav-link {
                color: #29353c;
                font-size: 1rem;
                font-family: 'Montserrat', cursive;
            }

            .category-bar .category-navlink:hover {
                color: #fff;
                background-color: #29353c;
                border-radius: 5px;
            }

            .category-bar .dropdown-item {
                color: #29353c;
            }

        .types li a:hover {
            color: #768a96;
        }

        .types-list {
            display: none;
            /*position: absolute;*/
            background-color: #fff;
            width: max-content;
        }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
