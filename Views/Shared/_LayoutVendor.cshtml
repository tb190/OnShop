<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Sacramento&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap">
</head>
<body style="overflow: hidden;">
    <div class="container-fluid">
        <div class="row flex-nowrap">

            <!-- Sidebar -->
            <nav class="sidebar col-md-2 col-lg-2 d-none d-md-block h-100">

                <div class="sidebar-brand" style="border-bottom: 1px solid #ffffff; ">
                    <h1 style="font-size: 1.7rem; padding-top: 0.7rem; padding-left: 1.2rem; color: #fff; font-family: 'Montserrat', cursive; "><span class="lab la-accusoft" style="font-size: 1.5rem; padding-right: 1rem; padding-left: 1rem;"></span>OnShop</h1>
                </div>

                <div class="sidebar-main mt-4">
                    <ul class="nav flex-column">
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Vendor" && ViewContext.RouteData.Values["Action"].ToString() == "VendorHome" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Vendor" asp-action="VendorHome">
                                <span class="las la-chalkboard"></span>
                                <span class="nav-text">DashBoard</span>
                            </a>
                        </li>
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Vendor" && ViewContext.RouteData.Values["Action"].ToString() == "VendorCustomers" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Vendor" asp-action="VendorCustomers">
                                <span class="las la-users"></span>
                                <span class="nav-text">Customers</span>
                            </a>
                        </li>
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Vendor" && (ViewContext.RouteData.Values["Action"].ToString() == "VendorProducts" || ViewContext.RouteData.Values["Action"].ToString() == "VendorAddNewProduct") ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Vendor" asp-action="VendorProducts" asp-route-page="1" >
                                <span class="las la-shopping-bag"></span>
                                <span class="nav-text">Products</span>
                            </a>
                        </li>

                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Vendor" && ViewContext.RouteData.Values["Action"].ToString() == "VendorInvertory" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Vendor" asp-action="VendorInvertory">
                                <span class="las la-shopping-cart"></span>
                                <span class="nav-text">Orders</span>
                            </a>
                        </li>
                        <!--li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Vendor" && ViewContext.RouteData.Values["Action"].ToString() == "VendorInvertory" ? "active" : "")">
        <a class="nav-link" asp-area="" asp-controller="Vendor" asp-action="VendorInvertory">
            <span class="las la-user-circle"></span>
            <span class="nav-text">Company</span>
        </a>
    </li-->

                    </ul>
                </div>

                <!-- Vendor Info -->
                <div class="sidebar-vendor-info d-flex align-items-center mt-auto">
                    <!-- Vendor Info -->
                    <a class="vendor-info d-flex align-items-center" asp-area="" asp-controller="Vendor" asp-action="VendorHome">
                        <img src="~/Pictures/profile.jpg" alt="Profile Picture" class="vendor-profile-pic">
                        <div class="vendor-details">
                            <p class="vendor-name">John Doe</p>
                            <p class="vendor-company">OnShop Inc.</p>
                            <p class="vendor-position">Manager</p>
                        </div>
                    </a>

                    <!-- Logout Button -->
                    <div class="logout-button" style=" margin-left:40px">
                        <a asp-area="" asp-controller="Vendor" asp-action="VendorHome" class="btn">
                            <span class="las la-sign-out-alt" style="color:#ffffff; fill:none; font-size:2rem "></span>
                        </a>
                    </div>
                </div>
            </nav>
         
            <!-- Main content -->
            <main role="main" class="col-md-10 col-lg-10">
                @RenderBody()
            </main>
        
        </div>
    </div>

    <style>
        .sidebar {
            max-width: 250px;
            background-color: #29353c;
            padding-top: 20px;
        }

        .sidebar-main {
            padding-top: 1rem;
            margin-right: -12px;
            overflow-y: auto;
            height: calc(85vh - 80px);
        }

        @@media (max-height: 992px) {
            .sidebar-main {
                height: calc(85vh - 100px);
            }
        }

        .nav-item {
            margin-bottom: 1rem;
        }

        .nav-link {
            display: block;
            color: #fff;
            font-size: 1rem;
            padding-left: 2rem;
            padding-top: 0.75rem;
            padding-bottom: 0.75rem;
        }

            .nav-link span:first-child {
                font-size: 1.5rem;
                padding-right: 1rem;
            }

            .nav-link .nav-text {
                font-family: 'Montserrat';
            }


        .nav-item.active {
            background: #ffffff;
            border-radius: 30px 0px 0px 30px;
        }

            .nav-item.active .nav-text{
                color: #000;
            }
            .nav-item.active .las {
                color: #000;
            }

        .nav-link:hover {
            color: #cdbcab;
        }

        /* Vendor Info styles */
        .sidebar-vendor-info {
            /*position: absolute;*/
            bottom: 0;
            padding: 1rem;
            font-size: 0.9rem;
            border-top: 1px solid #ffffff;
            /*width: 93%;*/
        }

        .vendor-info {
            display: flex;
            align-items: center;
            color: #fff;
            text-decoration: none;
        }

        .vendor-profile-pic {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 1rem;
        }

        .vendor-details {
            display: flex;
            flex-direction: column;
        }

        .vendor-name {
            font-weight: bold;
            margin-bottom: 0.2rem;
            font-family: 'Montserrat';
        }

        .vendor-company,
        .vendor-position {
            margin-bottom: 0.2rem;
            font-family: 'Montserrat';
            font-size: 0.8rem;
        }

        .la-sign-out-alt:hover {
            color: #cdbcab;
        }

        .vendor-info:hover {
            color: #cdbcab;
        }

        /* Scrollbar customization */
        .sidebar-main::-webkit-scrollbar {
            width: 3px;
        }

        .sidebar-main::-webkit-scrollbar-track {
            background: #29353c;
        }

        .sidebar-main::-webkit-scrollbar-thumb {
            background-color: #ffffff;
            border-radius: 4px;
        }

            .sidebar-main::-webkit-scrollbar-thumb:hover {
                background: #555;
            }

    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
