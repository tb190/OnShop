<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Sacramento&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap">
</head>
<body style="max-height: 500px; ">
    <div class="container-fluid">
        <div class="row flex-nowrap">

            <!-- Sidebar -->
            <nav id="sidebar" class="sidebar col-lg-2 d-none d-md-block h-100">

                <div class="sidebar-brand" style="border-bottom: 1px solid #ffffff; padding-top: 0.1rem; display: flex; align-items: center;">
                    <div class="brand-logo" style="margin-right: 1rem;">
                        <img src="~/Pictures/logoW.png" style="border-radius: 50%; width: 50px; height: 40px;">
                    </div>
                    <h1 class="brand-name" style="font-size: 1.4rem; color: #fff; font-family: 'Sacramento', cursive; margin-left: -30px; margin-top: 10px;">
                        <span style="font-size: 1.5rem; padding-right: 1rem;"></span>OnShop
                    </h1>
                    <!-- Toggle Button -->
                    <button id="toggleSidebarBtn" class=" btn-toggleSidebar">
                        <span class="las la-arrow-left"></span>
                    </button>
                </div>


                <div class="sidebar-main mt-2">
                    <ul class="nav flex-column">
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Vendor" && ViewContext.RouteData.Values["Action"].ToString() == "VendorHome" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Vendor" asp-action="VendorHome">
                                <span class="las la-chalkboard"></span>
                                <span class="nav-text">DashBoard</span>
                            </a>
                        </li>
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Vendor" && ViewContext.RouteData.Values["Action"].ToString() == "VendorCustomers" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Vendor" asp-action="VendorCustomers">
                                <span class="las la-users"></span>
                                <span class="nav-text">Customers</span>
                            </a>
                        </li>
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Vendor" && (ViewContext.RouteData.Values["Action"].ToString() == "VendorProducts" || ViewContext.RouteData.Values["Action"].ToString() == "VendorAddNewProduct") ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Vendor" asp-action="VendorProducts" asp-route-page="1">
                                <span class="las la-shopping-bag"></span>
                                <span class="nav-text">Products</span>
                            </a>
                        </li>

                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Vendor" && ViewContext.RouteData.Values["Action"].ToString() == "VendorInvertory" ? "active" : "")">
                            <a class="nav-link" asp-area="" asp-controller="Vendor" asp-action="VendorInvertory">
                                <span class="las la-shopping-cart"></span>
                                <span class="nav-text">Orders</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Vendor Info -->
                <div class="sidebar-vendor-info d-flex align-items-center mt-auto">

                    <!-- Logout Button -->
                    <div class="logout-button">
                        <a asp-area="" asp-controller="Login" asp-action="LogOut" class="btn">
                            <span class="las la-sign-out-alt" style="color:#fff; fill:none; font-size:1.5rem;"></span>
                        </a>
                    </div>

                    <div class="vendor-info">
                        <a asp-area="" asp-controller="Vendor" asp-action="VendorHome">
                            <div class="vendor-details" style=" margin-left: 20px;">
                                <p class="vendor-name">Tanay Bensu Yurttürk</p>
                                <p class="vendor-company">OnShop Inc.</p>
                                <p class="vendor-position">Manager</p>
                            </div>
                        </a>
                    </div>
                </div>

            </nav>

            <!-- Main content -->
            <main role="main" id="mainContent" class="col-lg-10" style="margin-left:30px; margin-top:10px">
                @RenderBody()
            </main>

        </div>
    </div>

    <style>


        .sidebar {
            max-width: 200px;
            background-image: linear-gradient(315deg, #d3d3d3 0%, #57606f 74%);
            padding-top: 20px;
            position: relative;
            transition: all 0.3s ease;
        }

        .sidebar-closed {
            max-width: 80px;
            min-width: 80px;
        }

        #mainContent {
            transition: margin-left 0.3s ease;
            margin-left: 200px;
        }

        .content-expanded {
            margin-left: 60px;
        }

       
        /* Toggle Button Styles */
        .btn-toggleSidebar {
            margin-left: 20px;
            background: #29353c;
            border: none;
            color: #fff;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        /* For collapsed sidebar state */
        .sidebar-closed .brand-logo {
            display: none;
        }

        .sidebar-closed .brand-name {
            display: none;
        }

        .sidebar-closed .btn-toggleSidebar .las {
            font-size: 1rem;
        }

        .sidebar-closed .vendor-details {
            display: none;
        }


        .sidebar-closed .btn-toggleSidebar {
            margin-left: 20px;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .nav-link .nav-text {
            display: inline;
            margin-left: 10px;
        }

        .sidebar-closed .nav-text {
            display: none;
        }


        .nav-link span:first-child {
            display: inline-block;
            width: 25px; /* İkonlar için yeterli genişlik */
            text-align: center; /* İkonları ortalamak için */
        }

        .sidebar-closed .nav-link span:first-child {
            display: block;
            text-align: center;
        }

        .sidebar-closed .nav-link {
            justify-content: center;
        }


        /* Sidebar kapalı durumdayken vendor-info ve logout butonları */
        .sidebar-closed .sidebar-vendor-info {
            display: flex;
            justify-content: center;
        }

        .sidebar-closed .logout-button {
            display: block;
            margin-top: 10px;
        }


        .sidebar-closed .vendor-info .vendor-name,
        .sidebar-closed .vendor-info .vendor-company,
        .sidebar-closed .vendor-info .vendor-position {
            display: none;
        }


        .sidebar-main {
            padding-top: 1rem;
            overflow-y: auto;
            height: calc(87vh - 86px);
            margin-right: -12px;
        }

        .sidebar-closed .sidebar-main {
            padding-top: 1rem;
            overflow-y: auto;
            height: calc(89vh - 86px);
            margin-right: -12px;
        }

        /* When sidebar is closed */
        .sidebar-closed ~ #mainContent {
            margin-left: 0;
            width: 91%;
        }


        @@media (max-height: 600px) {
            .sidebar-main {
                height: calc(87vh - 72px);
            }
        }

        .nav-item {
            margin-bottom: 1rem;
        }

        .nav-link {
            display: block;
            color: #fff;
            font-size: 0.7rem;
            padding-left: 1.4rem;
        }

            .nav-link span:first-child {
                font-size: 1rem;
                padding-right: 1rem;
            }

            .nav-link .nav-text {
                font-family: 'Montserrat';
            }

        .nav-item.active {
            background: #ffffff;
            border-radius: 30px 0px 0px 30px;
        }

            .nav-item.active .nav-text {
                color: #000;
            }

            .nav-item.active .las {
                color: #000;
            }

        .nav-link:hover {
            color: #cdbcab;
        }

        /* Vendor Info styles */
        .sidebar-vendor-info {
            bottom: 0;
            padding-top: 0.7rem;
            font-size: 0.7rem;
            border-top: 1px solid #ffffff;
            padding-bottom: 20px;
            margin-left: 10px;
        }

        .vendor-info a {
            display: flex;
            align-items: center;
            color: #fff;
            text-decoration: none;
        }


        .vendor-details {
            display: flex;
            flex-direction: column;
        }

        .vendor-name {
            font-weight: bold;
            margin-bottom: 0.2rem;
            font-family: 'Montserrat';
        }

        .vendor-company,
        .vendor-position {
            margin-bottom: 0.2rem;
            font-family: 'Montserrat';
            font-size: 0.5rem;
        }

        .la-sign-out-alt:hover {
            color: #cdbcab;
        }

        .vendor-info:hover {
            color: #cdbcab;
        }

        /* Scrollbar customization */
        .sidebar-main::-webkit-scrollbar {
            width: 2px;
        }

        .sidebar-main::-webkit-scrollbar-track {
            background: #29353c;
        }

        .sidebar-main::-webkit-scrollbar-thumb {
            background-color: #ffffff;
            border-radius: 3px;
        }

            .sidebar-main::-webkit-scrollbar-thumb:hover {
                background: #555;
            }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var sidebar = document.getElementById('sidebar');
            var mainContent = document.getElementById('mainContent');
            var toggleSidebarBtn = document.getElementById('toggleSidebarBtn');
            var toggleIcon = toggleSidebarBtn.querySelector('span');

            toggleSidebarBtn.addEventListener('click', function () {
                sidebar.classList.toggle('sidebar-closed');
                mainContent.classList.toggle('content-expanded');

                if (sidebar.classList.contains('sidebar-closed')) {
                    toggleIcon.classList.remove('la-arrow-left');
                    toggleIcon.classList.add('la-arrow-right');
                } else {
                    toggleIcon.classList.remove('la-arrow-right');
                    toggleIcon.classList.add('la-arrow-left');
                }
            });
        });
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
